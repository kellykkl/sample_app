<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
       <h1>
         <%= gravatar_for @user %>
         <%= @user.name %>
      </h1>
    </section>
  </aside>

  <div class="col-md-8 my-2">
  	<h2 class='text-left my-3'>My Articles</h2>
<ul class="users_articles">

  	  <% @user_articles.each do |article| %>
      <%= render partial: "article_card", locals: {article: article} %>
      <% end %>
</ul>
  </div>
</div>