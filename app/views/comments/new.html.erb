<% provide(:title, 'New comment') %>

<div class="row">
  <div class="col-md-6 offset-md-3">
      <%= form_with scope: :comment, url: comments_path(note_id: @note_id) do |form| %>
        <%= form.hidden_field :username, :value => current_user.name %>
        <%= form.hidden_field :note_id, :value => @note_id %>
        <%= form.hidden_field :user_id, :value => current_user.id %>
        <%= form.text_area :comment_text, size: "20x13", class: "form-control", id: "textInput" %>
        <%= form.submit 'Comment', class: "btn btn-primary", type: "submit", data: { disable_with: false }%>
      <% end %> 
  </div>
</div>